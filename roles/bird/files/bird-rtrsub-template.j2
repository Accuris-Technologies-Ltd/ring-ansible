        if complies_with_roa() then {
            /* add marker to routes for which a valid matching ROA exists */
            bgp_ext_community.add((unknown 0x4300, 0, 0));
        }
        else {
            bgp_ext_community.add((unknown 0x4300, 0, 2));
        }
