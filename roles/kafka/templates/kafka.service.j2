[Unit]
Description=Kafka
After=network.target

[Service]
User=kafka
Group=kafka
EnvironmentFile={{ kafka_path }}/kafka.env
ExecStart=/usr/bin/java -cp \
    $CLASSPATH \
    $KAFKA_LOG4J_OPTS \
    $KAFKA_HEAP_OPTS \
    $KAFKA_JVM_PERFORMANCE_OPTS \
    $KAFKA_GC_LOG_OPTS \
    $KAFKA_JMX_OPTS \
    kafka.Kafka \
    $KAFKA_SERVER_CONFIG
LimitNOFILE=49152

[Install]
WantedBy=multi-user.target
